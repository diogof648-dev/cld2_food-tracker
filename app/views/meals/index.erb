<div class="w-8/12 mx-auto bg-white shadow-md mt-10 p-4 rounded-md block">
    <div class="categories flex space-x-4">
        <div class="kcal bg-gray-500 p-2 flex-1">
            <p class="text-white text-sm text-bold">kcal</p>
            <p class="text-center text-xl text-white mt-2"><%=@kcal%> kcal</p>
        </div>
        <div class="proteins bg-green-500 p-2 flex-1">
            <p class="text-white text-sm text-bold">Prot√©ines</p>
            <p class="text-center text-xl text-white mt-2"><%=@proteins%>g</p>
        </div>
        <div class="carbohydrates bg-orange-500 p-2 flex-1">
            <p class="text-white text-sm text-bold">Glucides</p>
            <p class="text-center text-xl text-white mt-2"><%=@carbohydrates%>g</p>
        </div>
        <div class="fat bg-red-500 p-2 flex-1">
            <p class="text-white text-sm text-bold">Lipides</p>
            <p class="text-center text-xl text-white mt-2"><%=@fat%>g</p>
        </div>
    </div>

    <a href="/meals/track" class="text-center">
        <div class="w-full py-2 rounded-md mt-2 bg-blue-500 text-white"><i class="fa-solid fa-chart-line mr-2"></i> Observer graphique</div>
    </a>

    <h1 class="mt-10 mb-2 text-2xl">Repas</h1>
    <a href="/meals/new" class="text-white bg-green-500 p-2 rounded-md">+ Ajouter un repas</a>

    <div class="meals flex divide-x divide-grey-100 mt-10">
        <% @meal_types.each do |mt| %>
        <div class="flex-1">
            <p class="text-center text-xl"><%= mt.name %>
            <table class="table-fixed w-full mt-5">
                <% @meals.each do |m| %>
                    <% if m.meal_type.id == mt.id %>
                    <tr>
                        <td class="text-center"><%= m.product.name %></td>
                        <td class="text-center"><%= m.portion %>g</td>
                        <td class="text-center">
                            <form action="/meals/<%= m.id %> %>" method="post">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit"><i class="fa-solid fa-trash hover:text-red-500"></i></button>
                            </form>
                        </td>
                    </tr>
                    <% end %>
                <% end %>
            </table>
        </div>
        <% end %>
    </div>
</div>